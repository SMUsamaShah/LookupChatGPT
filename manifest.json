{
  "manifest_version": 2,
  "name": "Look Up Extension",
  "version": "1.0",
  "description": "A simple extension to look up text selections",
  "permissions": ["activeTab", "contextMenus", "https://api.openai.com/*", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["popup.js"],
    "run_at": "document_end"
  }],
  "browser_action": {},
  "options_page": "options.html"
}
